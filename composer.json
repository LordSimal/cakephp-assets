{
    "name": "passchn/cakephp-assets",
    "description": "Asset management plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "cakephp/cakephp": "^4.2",
        "josegonzalez/cakephp-upload": "^6.0",
        "league/csv": "^9.8",
        "nette/finder": "^2.5",
        "nette/utils": "^3.2",
        "intervention/image": "^2.7",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.3",
        "cakephp/cakephp-codesniffer": "^4.5",
        "cakedc/cakephp-phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Assets\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Assets\\Test\\": "tests/",
            "TestApp\\": "tests/test_app/src/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs --colors --parallel=16 -p src/",
        "cs-fix": "phpcbf --colors --parallel=16 -p src/",
        "stan": "phpstan analyse",
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.7.0 && mv composer.backup composer.json",
        "lowest-setup": "composer update --prefer-lowest --prefer-stable --prefer-dist --no-interaction && cp composer.json composer.backup && composer require --dev dereuromark/composer-prefer-lowest && mv composer.backup composer.json"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
